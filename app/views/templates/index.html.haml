%h1 Templates

= form_tag url_for({:controller => "templates", :action => "set_default"}), :method => :post, :class => "change_default"  do
  .table-responsive
    %table.table.table-hover.table-striped
      %thead
        %tr
          %th Default
          %th Name
      %tbody
        - @templates.each do |template|
          %tr
            %td
              %label{:for => "default_template_#{template.id}"}= radio_button_tag('default_template', template.id, checked=template.default)
            %td= link_to template.name, edit_template_path(template)
