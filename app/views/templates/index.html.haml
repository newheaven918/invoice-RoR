%h1 Templates

= form_tag url_for(:controller => "templates", :action => "set_default"), :method => :post do
  = submit_tag 'Change Default', class: "btn btn-sm btn-primary"
  .table-responsive
    %table.table.table-hover.table-striped
      %thead
        %tr
          %th{:colspan => "3"}
      %tbody
        - @templates.each do |template|
          %tr
            %td
              %label{:for => "default_template_#{template.id}"}= radio_button_tag('default_template', template.id, checked=template.default)
            %td= link_to template.name, template
            %td= link_to 'Edit', edit_template_path(template)
            %td= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' }
%br/
