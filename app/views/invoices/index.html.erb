<% if true %>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-push-8">
      <ul class="list-group list-unstyled">
        <li>Total Gross <span class="label label-default label-pill pull-right"><%= @gross.round 2 %> €</span></li>
        <li>Total Net<span class="label label-default label-pill pull-right"><%= @net.round 2 %> €</span></li>
        <li>Total Tax <span class="label label-default label-pill pull-right"><%= @tax.round 2 %> €</span></li>
      </ul>
    </div>
  </div>

  <%= form_tag remove_invoices_path, :method => :delete do -%>
    <%= submit_tag 'Remove Selected' %>
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th data-role="select-all"><%= check_box_tag "select_all", 1 %>
            <th><%= sort_link(@search, :series_value, "Number") %></th>
            <th><%= sort_link(@search, :name, "Customer Name") %></th>
            <th><%= sort_link(@search, :issue_date, "Date") %></th>
            <th><%= sort_link(@search, :status, "Status") %></th>
            <th style="text-align:right;">Pending</th>
            <th style="text-align:right;"><%= sort_link(@search, :gross_amount, "Total") %></th>
          </tr>
        </thead>
        <tbody class="js-iscroll">
          <%= render @invoices %>
        </tbody>
      </table>
    </div>
  <% end %>

<% end %>
