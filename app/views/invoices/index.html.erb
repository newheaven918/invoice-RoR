<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<div class="row">
   
    <div class="col-xs-12 col-md-12">
      <%= search_form_for @search, html: {id: "searchform", class: "form-inline"} do |f| %>
      <%= render 'shared/searchform', f: f, with_filters: true %>
      <div id="searchform__filters" class="col-xs-12 col-md-6 collapse">
        <%= render 'searchform__filters', f: f %>
      </div>
       <% end %>
      <div class="col-xs-12 col-md-6">
        <table class="table">
          <thead>
            <tr>
            <th>Total Gross</th><th>Total Net</th><th>Total Tax</th>
            </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @gross.round 2 %> €</td>
            <td><%= @net.round 2 %> €</td>
            <td><%= @tax.round 2 %> €</td>
          </tr>
          </tbody>
        </table>
      </div>
      
    </div>
   
  
</div>

<%= form_tag remove_invoices_path, :method => :delete do -%>
<%= submit_tag 'Remove Selected' %>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= check_box_tag "check_all" %>
      <th><%= sort_link(@search, :series_value, "Number") %></th>
      <th><%= sort_link(@search, :name, "Customer Name") %></th>
      <th><%= sort_link(@search, :issue_date, "Date") %></th>
      <th><%= sort_link(@search, :due_date, "Due Date") %></th>
      <th><%= sort_link(@search, :status, "Status") %></th>
      <th style="text-align:right;">Pending</th>
      <th style="text-align:right;"><%= sort_link(@search, :gross_amount, "Total") %></th>
    </tr>
  </thead>

  <tbody class="js-iscroll">
    <%= render @invoices %>
  </tbody>
</table>
<% end %>
