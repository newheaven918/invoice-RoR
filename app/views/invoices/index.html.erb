<% content_for :advanced_search do %>
<div id="searchOptions" class="container-fluid" style="display: none;">
  <p>Advanced Search Options for Invoices</p>
</div>
<% end %>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Search
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'no-filterrific-periodically-observed'
    ) %>
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <div>
  <%= f.submit 'Filter' %>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%#= render_filterrific_spinner %>
<% end %>

<%= link_to 'New Invoice', new_invoice_path %>
<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Customer Name</th>
      <th>Date</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Pending</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="js-iscroll">
    <%= render @invoices %>
  </tbody>
</table>


