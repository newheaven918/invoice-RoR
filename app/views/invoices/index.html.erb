<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Customer Name</th>
      <th>Date</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Pending</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="invoices-list">
    <%= render @invoices %>
  </tbody>
</table>
<div id="infinite-scrolling">
  <%= will_paginate %>
</div>

<br>

