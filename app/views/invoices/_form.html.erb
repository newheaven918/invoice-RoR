<%= simple_form_for(@invoice, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :customer_name %>
  <%= f.input :customer_identification %>
  <%= f.input :customer_email %>
  <%= f.input :invoicing_address, :input_html => { :class => 'autogrow', :rows => 2, :cols => 40 }%>
  <%= f.input :shipping_address, :input_html => { :class => 'autogrow', :rows => 2, :cols => 40 } %>
  <%= f.input :contact_person %>
  <%= f.input :terms, :input_html => { :class => 'autogrow', :rows => 2, :cols => 40 } %>
  <%= f.input :notes, :input_html => { :class => 'autogrow', :rows => 2, :cols => 40 } %>
  <%= f.input :number %>
  <%= f.input :issue_date %>
  <%= f.input :due_date %>

  <br/>
  Items
  <hr/>
  <%= f.simple_fields_for :invoice_items do |item| %>
    <%= render "invoice_item_fields", :f => item %>
  <% end %>
  <p><%= link_to_add_fields "Add Item", f, :invoice_items %></p>
  <br/>
  Payments
  <hr/>
  <%= f.simple_fields_for :payments do |payment| %>
    <%= render 'payment_fields', :f => payment %>
  <% end %>
  <p><%= link_to_add_fields "Add Payment", f, :payments %></p>
  <br/>

  <%= f.button :submit %>
<% end %>
