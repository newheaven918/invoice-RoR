<%= semantic_form_for @invoice do |f| %>
  <%= f.inputs do %>
    <%= f.input :customer_name %>
    <%= f.input :customer_identification %>
    <%= f.input :customer_email %>
    <%= f.input :invoicing_address %>
    <%= f.input :shipping_address %>
    <%= f.input :contact_person %>
    <%= f.input :terms %>
    <%= f.input :notes %>
    <%= f.input :base_amount %>
    <%= f.input :discount_amount %>
    <%= f.input :net_amount %>
    <%= f.input :gross_amount %>
    <%= f.input :paid_amount %>
    <%= f.input :tax_amount %>
    <%= f.input :status %>
    <%= f.input :closed %>
    <%= f.input :sent_by_email %>
    <%= f.input :number %>
    <%= f.input :issue_date %>
    <%= f.input :due_date %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
