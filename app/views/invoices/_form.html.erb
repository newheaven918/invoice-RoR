<%= semantic_form_for @invoice do |f| %>
  <%= f.inputs do %>
    <%= f.input :customer_name %>
    <%= f.input :customer_identification %>
    <%= f.input :customer_email %>
    <%= f.input :invoicing_address %>
    <%= f.input :shipping_address %>
    <%= f.input :contact_person %>
    <%= f.input :terms %>
    <%= f.input :notes %>
    <%= f.input :number %>
    <%= f.input :issue_date %>
    <%= f.input :due_date %>
  <% end %>

  <%= f.semantic_fields_for :invoice_items do |item| %>
    <%= item.inputs :description, :quantity ,:taxes, :name => "Items" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
