.row
  .col-xs-12.col-md-4.col-md-push-8
    %ul.list-group.list-unstyled
      %li
        Total Recurring
        %span.label.label-default.label-pill.pull-right 10
  - if @has_pendings
    %div
      = link_to 'Build Pending Invoices', generate_recurring_invoices_path, :method => :post
      = @get_pendings

= form_tag remove_recurring_invoices_path, :method => :delete do
  = submit_tag 'Remove Selected'
  .table-responsive
    %table.table.table-hover.table-striped
      %thead
        %tr
          %th{"data-role" => "select-all"}= check_box_tag "select_all", 1
          %th= sort_link(@search, :series_value, "Series")
          %th= sort_link(@search, :name, "Customer")
          %th= sort_link(@search, :period_type, "Frecuency")
          %th= sort_link(@search, :status, "Status")
          %th{:style => "text-align:right;"}= sort_link(@search, :gross_amount, "Total")
      %tbody.js-iscroll= render @recurring_invoices
