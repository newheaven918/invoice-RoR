%tr.js-item
  %td= link_to_remove_association 'remove', f, { wrapper_class: 'js-item' }
  %td= f.text_area :description, { class: "item-description" }
  %td= f.text_field :quantity, { class: 'quantity' }
  %td= f.text_field :unitary_cost, { class: 'unitary-cost' }
  %td= f.collection_select 'tax_ids', @taxes, :id, :name, is_new ? { selected: @default_taxes_ids} : {}, { multiple: true }
  %td= f.text_field :discount
  %td= f.text_field :base_amount, { class: 'base-amount', disabled: true }
