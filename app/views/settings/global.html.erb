<%= form_tag("#", method: "post") do %>
  <%= label_tag(:company_name, "Company Name:") %>
  <%= text_field_tag(:company_name, @company_name) %>
  <br/>
  <%= label_tag(:company_vat_id, "Company VAT ID:") %>
  <%= text_field_tag(:company_vat_id, @company_vat_id) %>
  <br/>
  <%= label_tag(:company_address, "Company Address:") %>
  <%= text_area_tag(:company_address, @company_address) %>
  <br/>
  <%= label_tag(:company_phone, "Company Phone:") %>
  <%= text_field_tag(:company_phone, @company_phone) %>
  <br/>
  <%= label_tag(:company_email, "Company Email:") %>
  <%= email_field_tag(:company_email, @company_email) %>
  <br/>
  <%= label_tag(:company_url, "Company Website:") %>
  <%= url_field_tag(:company_url, @company_url) %>
  <br/>
  <%= label_tag(:company_logo, "Company Logo:") %>
  <%= url_field_tag(:company_logo, @company_logo) %>
  <br/>
  <%= label_tag(:currency, "Currency:") %>
  <%= text_field_tag(:currency, @currency) %>
  <br/>
  <%= label_tag(:legal_terms, "Legal Terms:") %>
  <%= text_area_tag(:legal_terms, @legal_terms) %>
  <br/>
  <%= submit_tag("Save") %>
<% end %>
