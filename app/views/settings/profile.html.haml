%h1 My Account

.row
  .col-xs-12.col-md-6.col-xl-4
    = form_for @user, url: settings_profile_path, method: :put do |f|
      - if @user.errors.any?
        #error_explanation
          %h2
            = pluralize @user.errors.count, "error"
            prohibited these profile settings from being saved:
          %ul
            - @user.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label "Username:"
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label "Email:"
        = f.text_field :email, class: 'form-control'
      .form-group
        = label_tag :old_password, "Old Password:"
        = password_field_tag :old_password, nil, class: 'form-control'
      .form-group
        = f.label :password, "New Password:"
        = f.password_field :password, class: 'form-control'
      .form-group
        = f.label :password_confirmation, "New Password Confirmation:"
        = f.password_field :password_confirmation, class: 'form-control'

.action-buttons
  %button.btn.btn-success{type: 'button', data: {role: 'submit-form', target: 'form'}} Save
