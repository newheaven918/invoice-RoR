%h1 Hooks

.row
  .col-xs-12.col-md-6.col-xl-4
    = form_tag("", id:"hooks-settings", method: :put, url: settings_hooks_path) do
      .form-group
        = label_tag(:event_invoice_generation_url, "URL to post to when an invoice is generated by a recurring invoice:")
        = url_field_tag(:event_invoice_generation_url, @event_invoice_generation_url, class: 'form-control')
.row
  .col-xs-12.col-md-6.col-xl-4
    - if @nlogs
      - @nlogs.each do |i|
        %p{class: i[:level] == 'error' ? 'alert alert-danger' : 'alert alert-info'}
          = i
.row
  .col-xs-12.col-md-6.col-xl-4
    %ul{ class: "pager"}
      - if @nlogs.previous_page
        %li
          = link_to "Previous", settings_hooks_path(page: @nlogs.previous_page)
      - if @nlogs.next_page
        %li
          = link_to "Next", settings_hooks_path(page: @nlogs.next_page)


.action-buttons
  %button.btn.btn-success{type: 'button', data: {role: 'submit-form', target: 'form'}} Save
