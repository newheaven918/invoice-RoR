<%= semantic_form_for [@invoice, @invoice_item] do |f| %>
  <%= f.inputs do %>
    <%= f.input :invoice %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :discount %>
    <%= f.input :unitary_cost %>
    <%= f.input :taxes %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
