<%= simple_form_for [@invoice, @invoice_item] do |f| %>
  <%= f.input :invoice %>
  <%= f.input :description %>
  <%= f.input :quantity %>
  <%= f.input :discount %>
  <%= f.input :unitary_cost %>
  <%= f.select :tax_ids, Tax.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  <%= f.button :submit %>
<% end %>
